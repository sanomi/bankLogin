<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
 <link rel="stylesheet" href="http://cdn.foundation5.zurb.com/foundation.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="medium-5 medium-centered columns">

    <h1> Add Local Account</h1>

    <% if (message.length > 0) { %>
        <div class="<script src='https://code.jquery.com/jquery-1.11.3.min.js'></script>
<script src='http://cdn.foundation5.zurb.com/foundation.js'></script>"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/connect/local" method="post">
        <div>
            <label>Email</label>
            <input type="text"name="email">
        </div>
        <div>
            <label>Password</label>
            <input type="password"name="password">
        </div>

        <button type="submit" class="button">Add Local</button>
    </form>

    <hr>

    <p><a href="/profile">Go back to profile</a></p>

</div>
</div>
<script src='https://code.jquery.com/jquery-1.11.3.min.js'></script>
<script src='http://cdn.foundation5.zurb.com/foundation.js'></script>
</body>
</html>
